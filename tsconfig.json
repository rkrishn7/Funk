{
    "compilerOptions": {
        "module": "ES2015",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "lib/",
        "allowJs": true,
        "target": "ES5",
        "jsx": "react",
        "baseUrl": "src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
